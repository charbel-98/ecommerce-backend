# ===========================================
# E-commerce Backend Docker Environment Configuration
# ===========================================
# Copy this file to .env and update the values as needed

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
SPRING_PROFILES_ACTIVE=docker
APP_PORT=8080

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_NAME=ecommerce_db
DATABASE_USERNAME=ecommerce_user
DATABASE_PASSWORD=secure_password_change_me
DATABASE_PORT=5432

# ===========================================
# JWT SECURITY CONFIGURATION
# ===========================================
# Generate a secure 256-bit key for production
JWT_SECRET=ThisIsAVeryLongAndSecureJWTSecretKeyForHMACSHA256AlgorithmChangeMe
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ===========================================
# CLOUDFLARE R2 CDN CONFIGURATION
# ===========================================
# Get these from your Cloudflare R2 dashboard
R2_BUCKET_NAME=your_bucket_name
R2_CDN_DOMAIN=your_cdn_domain.com
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key

# ===========================================
# GOOGLE GEMINI AI CONFIGURATION
# ===========================================
# Get API key from Google AI Studio
GEMINI_API_KEY=your_gemini_api_key
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-image-preview:generateContent
GEMINI_MAX_RETRIES=3
GEMINI_TIMEOUT=60000

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=INFO

# ===========================================
# DATABASE SEEDING
# ===========================================
# Set to true to seed the database with sample data
SEED_DATA=true

# ===========================================
# PGADMIN CONFIGURATION (OPTIONAL)
# ===========================================
# Uncomment these if you want to use PGAdmin for database management
PGADMIN_EMAIL=admin@ecommerce.local
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# ===========================================
# DEVELOPMENT OPTIONS
# ===========================================
# Set to true for development mode with additional logging
DEBUG_MODE=false

# ===========================================
# PRODUCTION NOTES
# ===========================================
# For production deployment:
# 1. Generate a new JWT_SECRET (at least 32 characters)
# 2. Use strong database passwords
# 3. Configure proper R2 and Gemini credentials
# 4. Set SEED_DATA=false for production
# 5. Review all security settings